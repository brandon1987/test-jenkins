<script>




  $(document).ready(function(){
  	$("#testlogin").click(function(){
				  $.ajax({
				    type: 'GET',
				    url: '/phoneportal/main',
				    data: {
				      username: $("#username").val(),
				      password: $("#password").val(),
              special:$("#specialmode").val(),
              qry:$("#qry").val(),
              contractid:2,
              siteaddressid:1,
              customerid:'BRO001',
              instructions:'11111',
              engineerid:'nigel',
              visitref:'1002-ZABA001-nigel-1'
				    },
				    success: function(response) {
				    	$("#output").html(response);
				    }
				  });  		
  	});

  });





</script>
