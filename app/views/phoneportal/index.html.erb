<body>
	Username<input id="username" type='text'><br>
  Password<input id="password" type='text'><br>
  qry<input id="qry" type='text'><br>
  specialmode<input id="specialmode" type='text'><br>


	<button id='testlogin'>Test Login</button>
	<div id="output"></div>

