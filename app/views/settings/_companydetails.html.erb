<div style="float: left; width: calc(50% - 5px); margin-right: 5px; padding-right: 10px;">
	<h2 class="section-title">Users <span class="fa fa-users"></span></h2>

	<table id="user-list" class="clean-table">
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><a href="<%= url_for(user) %>"><%= user.username %><%= " (you)" if session[:username] == user.username %></a></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div style="float: left; width: calc(50% - 5px); margin-left: 5px;">
	<h2 class="section-title">Pending Invites  <span class="fa fa-spinner"></span></h2>

	<table id="invite-list" class="clean-table">
		<tbody>
			<% @invites.each_with_index do |invite, idx| %>
			<tr<%= " class=even" if idx % 2 == 0 %>>
				<td><%= invite.recipient %></td>
				<td class="button-column delete-button" style="padding:0px;"><button class="invite-revoke-button" data-inviteid="<%= invite.id %>">Revoke</button></td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<button id="add-user-dialog-open-button" class="right-float save-button" style="margin-top: 15px; width: 100%; height: 50px;">Invite User</button>
</div>